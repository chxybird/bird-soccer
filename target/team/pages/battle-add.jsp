                                <option value="0" selected="selected">友谊赛</option>
                                <option value="1">杯赛</option>
                                <option value="2">联赛</option>
                            </select>
                        </div>



                        <div class="col-md-2 title">主队</div>
                        <div class="col-md-4 data">
                            <select class="form-control select2" style="width: 100%"
                                    name="firstteamid">
                                <c:forEach items="${teams}" var="i">
